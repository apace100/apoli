{

    "type": "apoli:multiple",

    "toggle": {
        "type": "apoli:resource",
        "min": 0,
        "max": 1
    },

    "toggle_switch": {
        "type": "apoli:active_self",
        "entity_action": {
            "type": "apoli:if_else",
            "condition": {
                "type": "apoli:resource",
                "resource": "*:*_toggle",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "apoli:set_resource",
                "resource": "*:*_toggle",
                "value": 1
            },
            "else_action": {
                "type": "apoli:set_resource",
                "resource": "*:*_toggle",
                "value": 0
            }
        },
        "key": "key.attack",
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:sneaking"
                },
                {
                    "type": "apoli:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "apoli:empty"
                    }
                }
            ]
        }
    },

    "main": {
        "type": "apoli:resource",
        "min": 0,
        "max": 100,
        "hud_render": [
            {
                "should_render": true,
                "condition": {
                    "type": "apoli:resource",
                    "resource": "*:*_toggle",
                    "comparison": "==",
                    "compare_to": 0
                }
            },
            {
                "should_render": true,
                "sprite_location": {
                    "background": "apoli:animated_hud/background",
                    "base": "apoli:animated_hud/base",
                    "icon": "apoli:animated_hud/icon"
                }
            }
        ]
    }

}