{
    "type": "apoli:action_over_time",
    "interval": 1,
    "rising_action": {
        "type": "apoli:replace_inventory",
        "inventory_type": "power",
        "power": "apoli:pockets",
        "item_condition": {
            "type": "apoli:ingredient",
            "ingredient": {
                "item": "minecraft:glass_bottle"
            }
        },
        "stack": {
            "id": "minecraft:potion",
            "components": {
                "minecraft:potion_contents": {
                    "potion": "minecraft:water"
                }
            }
        }
    },
    "condition": {
        "type": "apoli:in_block",
        "block_condition": {
            "type": "apoli:fluid",
            "fluid_condition": {
                "type": "apoli:in_tag",
                "tag": "minecraft:water"
            }
        }
    }
}
